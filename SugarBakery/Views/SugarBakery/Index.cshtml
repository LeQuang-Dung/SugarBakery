    img {
        display: block;
        margin-left: auto;
        margin-right: auto;       
    }

    .thumbnail {
        width: 250px;
        float: left;
    }

    div#Datmua {
        clear: both;
        background-color: darkgreen;
        width: 100px;
        height: 35px;
        display: block;
        text-align: center;
        text-decoration: none;
        font-weight: bold;
        padding-top: 15px;
        margin-bottom: 15px;
        border-radius: 12px;
    }

    #Datmua a {
        color: white;
    }

