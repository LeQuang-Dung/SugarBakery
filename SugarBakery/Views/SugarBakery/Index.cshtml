@using SugarBakery.Models
@using PagedList.Mvc;
@model PagedList.PagedList<tbSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_LayoutMenu.cshtml";
}

<h3 style="text-align:center; color:red">SẢN PHẢM MỚI</h3>
<div class="row">
    @foreach (var sanpham in Model)
    {
        <div class="col-sm-3 col-lg-3 col-md-3">
            <div class="thumbnail">
                <a href="@Url.Action("ChiTiet", "SugarBakery", new {id = sanpham.MaSP})">
                    <img alt="@sanpham.TenSP" src="~/images/sanpham/@sanpham.AnhSP" width="170" height="170" />
                    <div>
                        <br />
                        <h4 style="text-align:center">
                            @sanpham.TenSP
                        </h4>
                    </div>
                    <p><strong> Giá: </strong> @sanpham.GiaBan VNĐ</p>
                    <div id="Datmua">
                        <a href="@Url.Action("ThemGiohang", "GioHang", new {@iMaSP = sanpham.MaSP, @strURL=Request.Url.ToString() })">
                            ĐẶT MUA
                        </a>
                    </div>
                    @*<div>
                        <br />
                        <h4 style="text-align:center">
                            @sanpham.TenSP
                        </h4>
                        <p></p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right">15 reviews</p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                        </p>
                    </div>*@
                </a>

            </div>
        </div>
    }
</div>
@* tao lien ket cac trang*@
<ul class="pagination modal-4">
    <li>
        <a href="" class="prev">
            <i class="fa fa-chevron-left"></i>
            Previous
        </a>
    </li>
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
    <li>
        <a href="" class="next">
            Next
            <i class="fa fa-chevron-right"></i>
        </a>
    </li>
</ul>

