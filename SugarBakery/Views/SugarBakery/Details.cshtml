<style type="text/css">
    #Datmua a {
        clear: both;
        background-color: red;
        color: white;
        width: 120px;
        height: 35px;
        display: block;
        float: right;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        font-weight: bold;
    }

        #Datmua a:hover {
            background-color: gray;
            color: red;
        }
</style>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<h2>THÔNG TIN CHI TIẾT SẢN PHẨM</h2>
<div>
    <div style="width:40%; float:left; border-left:dotted 1px; border-color:azure">
        <img src="~/images/sanpham/@Model.Anh" width="100%" />
    </div>
    <div style="width:60%; float:left; padding:10px">
        <h4 style="font-weight:bold; color:red">
            Tên sản phẩm: @Model.TenSP
        </h4>
        <p style="text-align:justify">
            <span style="font-weight:bold">
                Mô tả:
            </span>
            @Model.MoTa
        </p>
        <p style="font-weight:bold">
            Giá bán:
            <span style="color:red; font-size:16pt">
                @Model.GiaBan VNĐ
            </span>
        </p>
    </div>
    <div>
        <div id="Datmua">
            <a href="@Url.Action("ThemGiohang", "GioHang", new {@iMaSP = @Model.MaSP, @strURL=Request.Url.ToString() })">
                ĐẶT MUA
            </a>
        </div>
    </div>
</div>