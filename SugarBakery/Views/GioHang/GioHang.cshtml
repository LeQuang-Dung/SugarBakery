@using SugarBakery.Models
@model List<Giohang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Layout/_LayoutUser.cshtml";
}

<div class="content-giohang">
    <h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
    <table align="center" border="1">
        <tr style="text-align:center; font-weight:bold">
            <td> Mã sản phẩm </td>
            <td> Tên sản phẩm </td>
            <td> Ảnh bìa </td>
            <td> Số lượng </td>
            <td> Đơn giá </td>
            <td> Thành tiền </td>
            <td width="50px"></td>
            <td width="50px"></td>
            <td width="50px"></td>
        </tr>
        @foreach (var item in Model)
        {
            <tr style="text-align:center; font-weight:bold">
                <td> @item.iMasp </td>
                <td> @item.sTensp </td>
                <td>
                    <img src="~/images/sanpham/@item.sAnhbia" width="100" />
                </td>
                @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSP = item.iMasp }))
                {
                    <td>
                        <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="width:35px; background-color:lightgrey" />
                    </td>
                    <td> @String.Format("{0:0,0}", item.dDongia) </td>
                    <td> @String.Format("{0:0,0}", item.dThanhtien) </td>
                    <td>
                        <a href="@Url.Action("ChiTiet", "SugarBakery", new {id = item.iMasp})">
                            Chi tiết
                        </a>
                    </td>
                    <td>
                        @Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSP = item.iMasp })
                    </td>
                    <td>
                        <input type="submit" value="Cập Nhật" />
                    </td>
                }
            </tr>
        }
        <tr style="font-weight:bold; text-align:right; color:red">
            <td colspan="4"> Số lượng sản phẩm: @ViewBag.Tongsoluong</td>
            <td colspan="5"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ</td>
        </tr>
        <tr style="font-weight:bold; color:blue; text-align:right">
            <td colspan="9">
                @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")
            </td>
        </tr>
        <tr style="font-weight:bold; color:blue; text-align:right">
            <td colspan="9" align="center">
                @Html.ActionLink("Đặt Hàng", "DatHang", "GioHang")
            </td>
        </tr>
    </table>
</div>

    <style>
        * {
            padding: 0;
            margin: 0;
        }

        .content-giohang {
            width: 100%;
            font-size: 16px;
        }


        table {
            box-shadow: 0px 15px 25px 5px rgb(0 0 0 / 25%);
            border: 0.5px;
            margin: 0 auto;
        }

        td {
            border: solid 2px;
        }

        tr:first-child {
            background-color: #cecece;
        }

        tr btn {
            margin: 10px 10px;
        }

            tr btn:hover {
                background-color: #79794e;
            }

        media (max-width: 1024px) {
            content-giohang

        {
            font-size: 12px;
        }

        }
        }
    </style>
