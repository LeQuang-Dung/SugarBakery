
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/_LayoutLogin.cshtml";
}

<h2 style="text-align:center">ĐĂNG KÝ TÀI KHOẢN</h2>
<table align="center">

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên </td>
            <td>
                @Html.TextBox("Hoten")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên Đăng nhập </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu </td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Nhập lại mật khẩu </td>
            <td>
                @Html.Password("Nhaplaimatkhau")
                @ViewData["Loi4"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Địa chỉ </td>
            <td>
                @Html.TextBox("Diachi")
                @ViewData["Loi5"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Email </td>
            <td>
                @Html.TextBox("Email")
                @ViewData["Loi6"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Điện thoại </td>
            <td>
                @Html.TextBox("Dienthoai")
                @ViewData["Loi7"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Ngày sinh </td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
            <td></td>
        </tr>

        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>
    <p>
        @Html.ActionLink("Bạn đã có tài khoản? Đăng nhập", "Dangnhap", "NguoiDung")
    </p>
